<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<web-app xmlns:xsi="http://www.w3c.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee">

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>redirect.html</welcome-file>
	</welcome-file-list>



	<filter>
		<filter-name>ForceDownloadFilterParameter</filter-name>
		<filter-class>
			com.nalanda.nalyticsweb.filters.ForceDownloadFilterParameter
		</filter-class>
		<async-supported>true</async-supported>
	</filter>
	<filter-mapping>
		<filter-name>ForceDownloadFilterParameter</filter-name>
		<url-pattern>*.foo</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>ForceDownloadFilter</filter-name>
		<filter-class>com.nalanda.nalyticsweb.filters.ForceDownloadFilter</filter-class>
		<async-supported>true</async-supported>
	</filter>
	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.xfd</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.XFD</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.doc</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.DOC</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.docx</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.DOCX</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.eml</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.EML</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.xls</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.XLS</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.xlsx</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ForceDownloadFilter</filter-name>
		<url-pattern>*.XLSX</url-pattern>
	</filter-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Nalytics web app</web-resource-name>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>*</role-name>
		</auth-constraint>
	</security-constraint>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Exclude from Security</web-resource-name>
			<url-pattern>/images/*</url-pattern>
			<url-pattern>/css/*</url-pattern>
			<url-pattern>/js/NalyticsVersion.js</url-pattern>
		</web-resource-collection>
	</security-constraint>

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>nalytics-web-ldap-realm</realm-name>
		<form-login-config>
			<form-login-page>/jsp/login.jsp</form-login-page>
			<form-error-page>/jsp/loginerror.jsp</form-error-page>
		</form-login-config>
	</login-config>

	<listener>
		<listener-class>com.nalanda.nalyticsweb.session.NalyticsSessionListener</listener-class>
	</listener>

	<session-config>
		<session-timeout>60</session-timeout>
		<cookie-config>
			<http-only>true</http-only>
			<secure>true</secure>
		</cookie-config>
	</session-config>

</web-app>

